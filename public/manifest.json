{
  "name": "ClimACT - Plataforma de Acao Climatica",
  "short_name": "ClimACT",
  "description": "Plataforma colaborativa para combate as mudancas climaticas e gestao de desastres naturais",
  "theme_color": "#22c55e",
  "background_color": "#ffffff",
  "display": "standalone",
  "orientation": "portrait",
  "scope": "/",
  "start_url": "/",
  "lang": "pt-BR",
  "categories": ["productivity", "utilities", "social"],
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "48x48",
      "type": "image/x-icon",
      "purpose": "any"
    },
    {
      "src": "/favicon.ico",
      "sizes": "192x192",
      "type": "image/x-icon",
      "purpose": "maskable any"
    },
    {
      "src": "/favicon.ico",
      "sizes": "512x512",
      "type": "image/x-icon",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Reportar Incidente",
      "short_name": "Reportar",
      "description": "Reportar um incidente climatico",
      "url": "/dashboard/report"
    },
    {
      "name": "Mapa de Incidentes",
      "short_name": "Mapa",
      "description": "Visualizar mapa de incidentes",
      "url": "/dashboard/map"
    },
    {
      "name": "Alertas de Emergencia",
      "short_name": "Alertas",
      "description": "Verificar alertas ativos",
      "url": "/dashboard/alerts"
    },
    {
      "name": "Denuncia Anonima",
      "short_name": "Denuncia",
      "description": "Fazer denuncia anonima",
      "url": "/anonymous-report"
    }
  ],
  "share_target": {
    "action": "/dashboard/report",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+climact",
      "url": "/dashboard/report?url=%s"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_includes": false
}